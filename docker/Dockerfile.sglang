# Dockerfile for SGLang Server
# Cloud LLM Inference Benchmark Project

FROM nvidia/cuda:12.1.0-devel-ubuntu22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV CUDA_HOME=/usr/local/cuda

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3.10-dev \
    python3-pip \
    git \
    wget \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create symbolic links for python
RUN ln -sf /usr/bin/python3.10 /usr/bin/python3 \
    && ln -sf /usr/bin/python3 /usr/bin/python

# Upgrade pip
RUN python -m pip install --upgrade pip setuptools wheel

# Install PyTorch with CUDA support
RUN pip install torch==2.1.2 --index-url https://download.pytorch.org/whl/cu121

# Install additional dependencies from PyPI first
RUN pip install transformers accelerate huggingface_hub

# Install flashinfer from special index
RUN pip install flashinfer -i https://flashinfer.ai/whl/cu121/torch2.1/

# Install SGLang
RUN pip install "sglang[all]>=0.3.0"

# Create app directory
WORKDIR /app

# Create a startup script
RUN echo '#!/bin/bash\n\
# Login to HuggingFace if token provided\n\
if [ -n "$HUGGINGFACE_TOKEN" ]; then\n\
    huggingface-cli login --token $HUGGINGFACE_TOKEN\n\
fi\n\
\n\
# Set default model if not provided\n\
MODEL=${MODEL_NAME:-"facebook/opt-125m"}\n\
\n\
# Start SGLang server\n\
python -m sglang.launch_server \\\n\
    --model-path $MODEL \\\n\
    --host 0.0.0.0 \\\n\
    --port 30000 \\\n\
    --trust-remote-code \\\n\
    ${EXTRA_ARGS:-""}\n\
' > /app/start_server.sh && chmod +x /app/start_server.sh

# Expose port
EXPOSE 30000

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=120s --retries=3 \
    CMD curl -f http://localhost:30000/health || exit 1

# Default command
CMD ["/bin/bash", "/app/start_server.sh"]



